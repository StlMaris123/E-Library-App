<% provide(:title, "Add Book") %>
<div class="medium-4 columns medium-offset-4">
    <div class="callout">
        <h1> Add Book</h1>
        <p> Fill The form below to add a book of your choice</p>
        <%= form_for @book do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            <%= f.label :ISBN %>
            <%= f.text_field :ISBN %>

            <%= f.label :Title %>
            <%= f.text_field :title %>

            <%= f.label :Description %>
            <%= f.text_field :description %>

            <%= f.label :Quantity %>
            <%= f.number_field :quantity %>

            <%= f.submit "Add Book", class: "button large" %>
        <% end %>
    </div>
</div>
