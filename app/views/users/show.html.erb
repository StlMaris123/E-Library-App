<% provide(:title, @user.name)%>
<h4>Hello, <%= @user.name %></h4>
<h5> Welcome to the E-LIBRARY platform</h5>
<div class="row">
    <div class="medium-6 columns">
        <h3> List of the books available </h3>
        <table>
            <tr>
                <th>ISBN</th>
                <th>TITLE</th>
                <th>DESCRIPTION</th>
            </tr>
            <% @books.each do |book| %>
                <tr>
                    <td><%= book.ISBN %></td>
                    <td><%= book.title %></td>
                    <td><%= book.description %></td>
                    <td><%= form_for current_user.leases.build do |f| %>
                        <%= f.hidden_field :book_id, value: book.id %>
                        <%= f.hidden_field :user_id %>
                        <%= f.submit "Request", class: "button large" %></td>
                </tr>
            <% end %>
        <% end %>
        </table>
    </div>
    <div class="medium-6 columns">
        <h3>List of the borrowed books</h3>
        <table>
            <tr>
                <th>ISBN</th>
                <th>TITLE</th>
                <th>DESCRIPTION</th>
                <th>Due Date</th>
            </tr>
            <% @borrowed.each do |borrowed| %>
                <tr>
                    <td><%= borrowed.book.ISBN %></td>
                    <td><%= borrowed.book.title %></td>
                    <td><%= borrowed.book.description %></td>
                    <td> <%= remaining_days(borrowed) %></td>
                </tr>
            <% end %>
        </table>
    </div>
</div>
