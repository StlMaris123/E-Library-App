<% provide(:title, "Log In")%>
<div class="medium-6 columns medium-offset-3">
    <h1>LogIn</h1>
    <div class="callout">
        <%= form_for(:session, url: login_url) do |f| %>
            <%= f.label :name %>
            <%= f.text_field :name %>
            <%= f.label :password %>
            <%= link_to "(forgot password)", new_password_reset_path %>
            <%= f.password_field :password %>
            <%=f.label :remember_me do %>
                <%= f.check_box :remember_me %>
                <% end %>
            <%= f.submit "Login", class: "large button"%>
        <% end %>
        <p>Don't have an account?<%= link_to "Sign Up", new_user_url %></p>
    </div>
</div>
